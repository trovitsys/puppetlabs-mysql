# Generated by Puppet

<% if @mysql_client_include -%>
!include <%= @config_path %>/my.cnf
<% end -%>
[client]
host     = <%= @host %>
user     = <%= @user %>
<% if @password != '' -%>
password = <%= @password %>
<% end -%>
<% if @mysql_client_socket -%>
socket   = <%= @socket %>
<% end -%>
<% if @mysql_client_port -%>
port              = <%= @mysql_client_port %>
<% end -%>
<% if @mysql_client_have_ssl -%>
# SSL config
ssl-ca              = <%= @mysql_client_ssl_ca %>
ssl-cert            = <%= @mysql_client_ssl_cert %>
ssl-key             = <%= @mysql_client_ssl_key %>
<% end -%>
[mysqladmin]
host     = <%= @host %>
user     = <%= @user %>
<% if @password != '' -%>
password = <%= @password %>
<% end -%>
<% if @mysql_client_socket -%>
socket   = <%= @socket %>
<% end -%>
[mysqldump]
host     = <%= @host %>
user     = <%= @user %>
<% if @password != '' -%>
password = <%= @password %>
<% end -%>
<% if @mysql_client_socket -%>
socket   = <%= @socket %>
<% end -%>
